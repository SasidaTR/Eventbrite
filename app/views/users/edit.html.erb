<!-- users/edit.html.erb -->

<div class="user-edit-profile">
  <h1>Modifier le profil</h1>

  <%= form_for @user, url: user_path(@user.id), html: { method: :put, multipart: true } do |f| %>
    <div class="form-group">
      <%= f.label :first_name, "PrÃ©nom" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :last_name, "Nom" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :photo, "Photo" %>
      <%= f.file_field :photo, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description, "Description" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Enregistrer les modifications", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
