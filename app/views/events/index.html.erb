<% if flash[:success].present? %>
  <div class="alert alert-success custom_alert" role="alert">
    <%= flash[:success] %>
  </div>
<% end %>

<h1 class="text-center">Les <span style="color: #1abdce;">évènements</span></h1>
<p class="mb-5 text-center" style="color: black;">Parcours le mur des <span style="color: #1abdce;">évènements</span> proches de chez toi</p>

<div class="container">
  <div class="row justify-content-center mb-5">
    <% @events.each do |event| %>
      <div class="card mb-3 mx-3 card-home" style="width: 18rem; height: 18rem; max-height: 18rem">
        <div class="card-body d-flex flex-column justify-content-between">
          <h5 class="card-title" style="color: #1abdce;"><%= truncate(event.title, length: 24, separator: '...') %></h5>
          <p class="card-text">Date : <%= event.start_date %></p>
          <p class="card-text"><em><%= truncate(event.description, length: 100, separator: '...') %></em></p>
          <a href="<%= event_path(event.id) %>" class="btn btn-primary justify-content-end">Voir l'évènement</a>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>